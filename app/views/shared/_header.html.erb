<header class="bg-light border-bottom", style="height: 50px;">
  <div class="header-left float-left ml-3">
    <i class="fas fa-sticky-note fa-2x"></i>
    <h1 class="d-inline">EngNotes</h1>
  </div>
  <div class="header-right float-right mr-3 mt-3" style="font-size: 1.2rem;">
    <% if user_signed_in? %>
      <span>Hello, <%= current_user.username %></span>
      <%= link_to "UserEdit", edit_user_registration_path, method: :get %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to 'Guest Log in', users_guest_sign_in_path, method: :post %>
    <% end %>
  </div>
</header>
